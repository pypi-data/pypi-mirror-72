#!/usr/bin/env bash
{ set +x; } 2>/dev/null

usage() {
    echo "usage: $(basename $0)"
    [[ $1 == "-h" ]] || [[ $1 == "--help" ]]; exit
}

[[ $1 == "-h" ]] || [[ $1 == "--help" ]] && usage "$@"

[[ $# != 0 ]] && usage

name="$SETUP_NAME"
[[ -z "$name" ]] && {
   name="$(IFS=.;set ${PWD##*/};echo $1)"
}
[[ -n "$SETUP_SCRIPTS" ]] && {
    scripts="$(echo "$SETUP_SCRIPTS" | sed "s/;/';'/g;s/^/'/;s/$/'/" | sed 'H;1h;$!d;x;y/\n/,/')"
    cat <<EOF
import setuptools

setuptools.setup(
    name='$name',
    install_requires=open('requirements.txt').read().splitlines(),
    packages=setuptools.find_packages(),
    scripts=[$scripts]
)
EOF
} || {
    cat <<EOF
import setuptools

setuptools.setup(
    name='$name',
    install_requires=open('requirements.txt').read().splitlines(),
    packages=setuptools.find_packages()
)
EOF
}


