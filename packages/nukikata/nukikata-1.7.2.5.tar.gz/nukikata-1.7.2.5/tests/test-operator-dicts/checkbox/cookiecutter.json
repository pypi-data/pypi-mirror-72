{
  "project_slug": "best_eva",
  "providers": {
    "type": "checkbox",
    "message": "What providers?",
    "choices": [
      {"name": "aws"},
      {"name": "gcp"}
    ]
  },
  "aws_regions": {
    "type": "checkbox",
    "message": "Which regions?",
    "choices": [
      {"name": "us-east-1"},
      {"name": "us-east-2"},
      {"name": "us-wast-1"}
    ],
    "when": "{{ 'aws' in cookiecutter.providers }}"
  },
  "do_stuff": {
    "type": "command",
    "command": "pwd"
  },
  "gcp_regions": {
    "type": "checkbox",
    "message": "Which regions?",
    "choices": [
      {"name": "us-east1"},
      {"name": "us-east2"},
      {"name": "us-wast1"}
    ],
    "when": "{{ 'gcp' in cookiecutter.providers }}"
  },
  "some_cc": {
    "type": "cookiecutter",
    "template": "https://github.com/tiangolo/full-stack-fastapi-postgresql",
    "when": "{{ 'gcp' in cookiecutter.providers }}"
  },
  "demo_loop": {
    "type": "confirm",
    "message": "Do you want to apply {{ cookiecutter.item }}?",
    "loop": "{{ cookiecutter.aws_regions }}"
  }
}