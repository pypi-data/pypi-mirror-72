{
    "type": "object",
    "class": "fastr.planning.node.ConstantNode",
    "$schema": "http://json-schema.org/draft-04/schema",
    "required": ["id", "tool", "inputs", "outputs", "data"],
    "properties": {
        "id": {
            "type": "string"
        },
        "inputs": {
            "type": "array",
            "uniqueItems": true,
            "items": {"$ref": "common.schema.json#/definitions/input"}
        },
        "jobs": {
            "type": ["array", "null"],
            "items": {
                "type": "string"
            }
        },
        "outputs": {
            "type": "array",
            "uniqueItems": true,
            "items": {"$ref": "common.schema.json#/definitions/output"}
        },
        "tool": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string",
                    "const": "fastr/Source:1.0"
                },
                "version": {
                    "type": "string",
                    "const": "1.0"
                }
            }
        },
        "data": {
            "type": "array",
            "items": {
                "type": "array",
                "items": [
                    {
                        "type": "string"
                    },
                    {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                ]
            }
        },
        "_required_cores": {
            "type": ["integer", "null"]
        },
        "_required_memory": {
            "type": ["string", "null"]
        },
        "_required_time": {
            "type": ["string", "null"]
        }
    }
}
