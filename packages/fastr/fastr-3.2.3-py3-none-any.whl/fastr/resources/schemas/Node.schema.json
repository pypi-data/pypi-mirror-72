{
    "type": "object",
    "class": "fastr.planning.node.Node",
    "$schema": "http://json-schema.org/draft-04/schema",
    "required": ["id", "inputs", "outputs"],
    "properties": {
        "id": {
            "type": "string"
        },
        "inputs": {
            "type": "array",
            "uniqueItems": true,
            "items": {"$ref": "common.schema.json#/definitions/input"}
        },
        "jobs": {
            "type": ["array", "null"],
            "items": {
                "type": "string"
            }
        },
        "outputs": {
            "type": "array",
            "uniqueItems": true,
            "items": {"$ref": "common.schema.json#/definitions/output"}
        },
        "tool": {
            "type": ["object", "null"],
            "properties": {
                "id": {
                    "type": "string"
                },
                "version": {
                    "$ref": "common.schema.json#/definitions/version"
                }
            }
        },
        "_required_cores": {
            "type": ["integer", "null"]
        },
        "_required_memory": {
            "type": ["string", "null"]
        },
        "_required_time": {
            "type": ["string", "null"]
        }
    }
}
