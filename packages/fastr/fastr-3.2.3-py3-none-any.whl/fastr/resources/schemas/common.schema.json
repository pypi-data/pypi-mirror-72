{
    "$schema": "http://json-schema.org/draft-04/schema",
    "definitions": {
        "input": {
            "type": "object",
            "class": "fastr.planning.inputoutput.Input",
            "required": ["id", "input_group"],
            "properties": {
                "id": {
                    "type": "string"
                },
                "input_group": {
                    "type": "string"
                },
                "datatype": {
                    "type": "string"
                }
            }
        },
        "constantinput": {
            "type": "object",
            "properties": {
                "_data": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "string"
                    }
                },
                "_datatype": {
                    "type": "string"
                }
            },
            "allOf": [
                {"$ref": "#/definitions/input"}
            ]
        },
        "output": {
            "type": "object",
            "class": "fastr.planning.inputoutput.Output",
            "required": ["id"],
            "properties": {
                "id": {
                    "type": "string"
                },
                "preferred_types": {
                    "type": "array",
                    "items": {"type": "string"}
                },
                "datatype": {
                    "type": "string"
                },
                "suboutputs": {
                    "type": "array",
                    "items": {"$ref": "#/definitions/suboutput"}
                }
            }
        },
        "suboutput": {
            "type": "object",
            "class": "fastr.planning.inputoutput.SubOutput",
            "required": ["id", "index"],
            "properties": {
                "id": {
                    "type": "string"
                },
                "index": {
                    "type": "string"
                },
                "suboutputs": {
                    "type": "array",
                    "items": {"$ref": "#/definitions/suboutput"}
                }
            }
        },
        "version": {
            "description": "A version number",
            "type":"string",
            "oneOf": [
                {
                    "pattern": "^v?([0-9]+)\\.([0-9]+)((?:\\.[0-9]+)+)?([_\\-\\.])?(a(?=[0-9])|b(?=[0-9])|alpha(?=[0-9])|beta(?=[0-9])|rc(?=[0-9])|r(?=[0-9]))?([0-9]+)?([a-zA-Z0-9\\-_\\.]*)$"
                },
                {
                    "pattern": "^v?([0-9]+)\\-([0-9]+)\\-([0-9]+)([_\\-\\.])?([a-zA-Z0-9\\-_\\.]*)$"
                }
            ]
        }
    }
}