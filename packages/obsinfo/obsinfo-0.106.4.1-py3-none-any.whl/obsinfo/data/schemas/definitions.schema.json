{
    "format_version": {
        "description": "Version of this file's schema",
        "type": "string",
        "pattern": "^0\\.106$"
    },
    "author" : {
        "type": "object",
        "required": ["first_name", "last_name"],
        "properties": {
          "first_name": {"type": "string"},
          "last_name": {"type": "string"},
          "email": {"type": "string", "format": "email"},
          "phones": {"type": "array", "items": {"$ref": "#/phone"}}
        }
    },
    "yaml_anchors" : {
        "type": "object",
        "description": "Free-form object used to define anchors in YAML files"
    },
    "extras" : {
        "type": "object",
        "description": "Free-form object for additions to information files"
    },
    "comments": {
        "type" : "array",
        "description" : "list of comments (should be included in output metadata)",
        "minItems": 0,
        "items" : {
                "anyOf": [
                    {
                        "type": "string",
                        "minimum": 2
                    }, 
                    {
                        "type" : "object", 
                        "required": ["value"],
                        "properties" : {
                        "value":{"type":"string"},
                        "begin_effective_time" :{"$ref":"#/date-time-Z"},
                        "end_effective_time" :{"$ref":"#/date-time-Z"},
                        "authors" :{"type":"array","items": {"$ref": "#/author"}
                        }
                    }   
                    }
                ]
            }
    },
    
    "comment": {
        "type" : "object", 
        "required": ["comment"],
        "properties" : {
                        "comment":{"type":"string"},
                        "BeginEffectiveTime" :{"$ref":"#/date-time-Z"},
                        "EndEffectiveTime" :{"$ref":"#/date-time-Z"},
                        "authors" :{"type":"array","items": {"$ref": "#/author"}}
        }   
    },
    "date": {
        "type": "string",
        "description": "Date in yyyy-mm-dd format",
        "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
    },
    "date_or_null": {
        "anyOf": [
            {
                "type" : "string",
                "description" : "yyyy-mm-dd date",
                "pattern" : "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
            },
            {   "type" : "null" }
        ]
    },
    "date-time-Z": {
        "anyOf" : [
            {
                "type": "string",
                "description": "Date-time in ISO format with Z for GMT+0. The Z is not required.",
                "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}:[0-9]{2}(\\.[0-9]*)?[Z]*$"
            },
            { "type" : "null" }
        ]
    },
    "email": {
        "type": "string",
        "format": "email"
    },
    "notes": {
        "type" : "array",
        "description" : "list of notes (should not be included in output metadata)",
        "minItems": 0,
        "items" : { "type" : "string", "minLength" : 1 }
    },
    "extras": {
        "type" : "object",
        "description" : "open structure for values and fields that do not contribute to (current) FDSN data or metadata"
    },
    "phone": {
 
            "anyOf":[
               { "type": "string",
                "description": "...",
                "pattern": "^[0-9]+-[0-9]+$"
            },
            {

        "type": "object",
        "description": "...",
        "properties":{
            "CountryCode": "Integer",
            "AreaNumber":"Integer" ,
            "PhoneNumber": {"type":"string", "pattern": "^[0-9]+-[0-9]+$"}
            }
        }
        ]
    },
    "reference_name": {
        "type": "string",
        "description": "campaign or facility reference name"
    },
    "revision": {
        "description": "Date provenance of instrumentation information",
        "type": "object",
        "required": ["date","authors"],
        "properties": {
            "date": { "$ref": "#/date" },
            "authors": {
                "type": "array",
                "minItems" : 1,
                "items" : {"$ref": "#/author"}
            }
        }
    },
    "string_or_null": { 
        "type" : [ "string" , "null" ]
    },
    "URI_and_revision": {
        "type": "object",
        "description": "URI and revision date of file to be loaded",
        "required" : ["$ref","revision_date"],
        "properties" : {
            "$ref" : {"type":"string"},
            "revision_date": {
                "anyOf" : [
                    { "$ref" :"#/date-time-Z"},
                    { "$ref" :"#/date_or_null"}
                ]
            }
        },
        "additionalProperties" : false
    },
    "URI_ref": {
        "type": "object",
        "description": "URI to file containing information to be loaded here",
        "required" : ["$ref"],
        "properties" : { "$ref" : {"type":"string"} },
        "additionalProperties" : false
    },
    "website": {
        "type": "string",
        "format": "uri"
    },
    "any_date":{
        "anyOf" :[
            {"$ref": "#/date" },
            {"$ref": "#/date-time-Z"}
        ]

    }
}
